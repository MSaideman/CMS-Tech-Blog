 <div
    id="card"
    class="card mb-2 m-2 shadow-sm border-solid border-black border-8 rounded m-8"
  >
    <div class="card-header m-2 pt-3">
      <a id="post-title" href="/post/{{post.id}}">{{post.title}}</a>
    </div>
    <div class="card-body">
      <p id="content-info">{{post.content}}</p>
    </div>
    <h4>created by: {{post.user.name}}</h4>
  </div>
  <div class="card-header m-8">
    <h1>comments</h1>
  </div>
  {{#each post.comments as |comment|}}
  <div class="card-body m-10 shadow-sm border-solid border-4 rounded p-2">
   <p>{{comment.content}}</p> 
   <p>{{format_date comment.date_created}}</p>
  </div>
  {{/each}}
<!-- displaying form and comments-->
{{#if loggedIn}}
  <div class="card ">
    <div class="card-header ml-4 p-2">
      add comment
      <label for="comment"></label>
      <textarea name="content" placeholder="type comment here" id="comment"></textarea>
    </div>
    <form class="card-body comment-form ml-4 p-2">
      <div>
      </div>

      <div>
        <button type="submit">submit</button>
      </div>
    </form>
  </div>
{{/if}}

{{#if loggedIn}}
  <script src="/javascript/comment.js"></script>
{{/if}}

